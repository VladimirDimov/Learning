@using Multilingual.Web.MultilingualActivator

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Html.Translate("ApplicationName"), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Html.Translate("Home"), "Index", "Home")</li>
                    <li>@Html.ActionLink(Html.Translate("About"), "About", "Home")</li>
                    <li>@Html.ActionLink(Html.Translate("Contact"), "Contact", "Home")</li>
                    <li class="dropdown" id="changeLanguage">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">Language <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#" lang="en">EN</a></li>
                            <li><a href="#" lang="bg">BG</a></li>
                            <li><a href="#" lang="fr">FR</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/assets/datatableserverside/datatable.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $('#changeLanguage li a').on('click', function (e) {
            e.preventDefault();
            var lang = $(this).attr('lang');

            $.ajax({
                url: '/home/changeLanguage',
                data: { language: lang },
                success: function () {
                    window.location.reload();
                }
            });
        });
    </script>
</body>
</html>
