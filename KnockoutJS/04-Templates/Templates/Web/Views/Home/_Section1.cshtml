<h3>Section 1</h3>
<div class="form-row">
    <div class="form-group col-md-6">
        <div data-bind="
                 template: {
                     name: 'tpl-email',
                     data: {id: 'person-mail', value: email}
                 }"></div>
    </div>
    <div class="form-group col-md-6">
        <label for="inputPassword4">Password</label>
        <input type="password" class="form-control" id="inputPassword4" placeholder="Password">
    </div>
</div>
<div class="form-row">
    <div class="form-group col-md-12">
        <div data-bind="
                 template: {
                     name: 'tpl-text',
                     data: {id: 'person-address', value: text, label: 'Address', value: text}
                 }"></div>
    </div>
</div>
